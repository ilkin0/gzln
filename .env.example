# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=gzln_db
DB_CONTAINER_NAME=gzln_db

# Database URL (for migrations and direct connections)
# Format: postgresql://user:password@host:port/database?sslmode=disable
DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=disable

# Docker-specific: When running inside Docker,'db' as host
# For local development, 'localhost'
# DB_HOST=db  # Uncomment when running server in Docker
# DB_HOST=localhost  # Use when running server locally

# Application Environment
APP_ENV=development
LOG_LEVEL=debug

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB in bytes

# MinIO Configuration
MINIO_CONTAINER_NAME=gzln_minio
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# MinIO Client Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=gzln-uploads

# Rate Limiting Configuration (requests per minute per IP)
RATE_LIMIT_UPLOAD_INIT=10
RATE_LIMIT_CHUNK_UPLOAD=60
RATE_LIMIT_UPLOAD_FINALIZE=20
RATE_LIMIT_METADATA=30
RATE_LIMIT_CHUNK_DOWNLOAD=110
RATE_LIMIT_DOWNLOAD_COMPLETE=20
RATE_LIMIT_WINDOW_SECONDS=60
