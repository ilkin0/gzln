# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=gzln_db
DB_CONTAINER_NAME=gzln_db

# Database URL (for migrations and direct connections)
# Format: postgresql://user:password@host:port/database?sslmode=disable
DB_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=disable

# Docker-specific: When running inside Docker, use 'db' as host
# For local development, use 'localhost'
# DB_HOST=db  # Uncomment when running server in Docker
# DB_HOST=localhost  # Use when running server locally

# Application Environment
APP_ENV=development
LOG_LEVEL=debug

# Optional: File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
